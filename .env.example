# ===== App =====
SERVER_PORT=8080

# JPA (운영 validate / 로컬은 필요 시 update)
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

LOG_WEB_LEVEL=INFO
LOG_SQL_LEVEL=debug
LOG_SECURITY_LEVEL=TRACE

# ===== DB =====
# IDE 실행: jdbc:mysql://localhost:3306/earlybird?...
# Docker 실행: jdbc:mysql://db:3306/earlybird?...
DB_URL=jdbc:mysql://localhost:3306/earlybird?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul&allowPublicKeyRetrieval=true
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=root

# ===== Redis =====
# IDE 실행: localhost
# Docker 실행: redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TIMEOUT=3s

# (권장) Spring 표준 키로도 덮어쓰기 가능
# SPRING_DATA_REDIS_TIMEOUT=3s

# ===== JWT =====
JWT_ISSUER=your_issuer
JWT_SECRET=your_local_secret
JWT_ACCESS_TTL_SECONDS=1800
REFRESH_TOKEN_TTL_SECONDS=1209600

# ===== Email =====
VERIFICATION_CODE_EXPIRY_MINUTES=10
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_APP_PASSWORD=your_gmail_app_password
EMAIL_SENDER=your_email@gmail.com

# ===== Swagger =====
SWAGGER_SERVER_URL=http://localhost:8080
SWAGGER_DESCRIPTION=Local API Server

# ===== Actuator =====
ACTUATOR_EXPOSE=health,info
