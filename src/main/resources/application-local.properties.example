spring.application.name=board
# ===== Server =====
server.port=8080

# ===== MySQL =====
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:3306/earlybird?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul&allowPublicKeyRetrieval=true
spring.datasource.username={YOUR_DB_USER}
spring.datasource.password={YOUR_DB_PASSWORD}

spring.jpa.hibernate.ddl-auto=validate
spring.jpa.properties.hibernate.format_sql=true

# ===== Logging =====
logging.level.org.springframework.web=INFO
logging.level.sql=debug

# ===== JWT =====
jwt.issuer={ISSUER_NAME}
jwt.secret=REPLACE_WITH_YOUR_LOCAL_SECRET
jwt.access-ttl-seconds={SECONDS}

# ===== Refresh Token (opaque) =====
refresh-token.ttl-seconds={SECONDS}

# ===== Redis =====
spring.data.redis.host=localhost
spring.data.redis.port=6379
spring.data.redis.timeout={SECONDS}

# ===== Email Verify =====
verification.code.expiry-minutes={MINUTE}

# ===== Email =====
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username={YOUR_EMAIL}
spring.mail.password=[YOUR_APP_PW]

spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# EmailService @Value("${email.sender}")
email.sender={YOUR_EMAIL}

# Swagger server info
swagger.server-url=http://localhost:8080
swagger.description=Local API Server

